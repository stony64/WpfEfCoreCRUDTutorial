<!-- PersonAddressDetailsWindow.xaml -->
<Window x:Class="WpfEfCoreCRUDTutorial.PersonAddressDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Adressdetails"
        Height="450"
        Width="800">

    <!--
        Dieses Fenster arbeitet mit dem AddressViewModel als DataContext.
        Es zeigt alle Adressen zur aktuell ausgewählten Person an und erlaubt
        deren Bearbeitung (Neu, Speichern, Löschen).
        Die Zuordnung zur Person (PersonId + CurrentPersonName) wird vor dem Öffnen
        im MainWindow/MainViewModel vorgenommen.
    -->
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <!-- Kopfbereich: ausgewählte Person -->
            <RowDefinition Height="Auto" />
            <!-- Eingabebereich + Buttons -->
            <RowDefinition Height="Auto" />
            <!-- Adressliste -->
            <RowDefinition Height="*" />
            <!-- Statuszeile -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Kopf: ausgewählte Person anzeigen -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Adressen für:"
                       FontWeight="Bold"
                       Margin="0,0,8,0" />
            <TextBlock Text="{Binding CurrentPersonName}"
                       FontWeight="Bold" />
        </StackPanel>

        <!-- Eingabebereich für eine Adresse -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">

            <!-- Straße -->
            <StackPanel Margin="0,0,8,0">
                <!-- Beschriftung statt Header-Property -->
                <TextBlock Text="Straße"
                           Margin="0,0,0,2" />
                <!-- Bindet an Street im AddressViewModel -->
                <TextBox Width="220"
                         Text="{Binding Street, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- PLZ -->
            <StackPanel Margin="0,0,8,0">
                <TextBlock Text="PLZ"
                           Margin="0,0,0,2" />
                <!-- Bindet an PostalCode im AddressViewModel -->
                <TextBox Width="80"
                         Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Ort -->
            <StackPanel Margin="0,0,8,0">
                <TextBlock Text="Ort"
                           Margin="0,0,0,2" />
                <!-- Bindet an City im AddressViewModel -->
                <TextBox Width="150"
                         Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Land -->
            <StackPanel Margin="0,0,8,0">
                <TextBlock Text="Land"
                           Margin="0,0,0,2" />
                <!-- Bindet an Country im AddressViewModel -->
                <TextBox Width="150"
                         Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Buttons für CRUD auf Address -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        Margin="16,0,0,0">
                <!-- Neu: legt eine neue Adresse für die aktuell ausgewählte Person an -->
                <Button Content="Neu"
                        Margin="0,0,8,0"
                        Command="{Binding CreateAddressCommand}" />

                <!-- Speichern: aktualisiert die ausgewählte Adresse -->
                <Button Content="Speichern"
                        Margin="0,0,8,0"
                        Command="{Binding UpdateAddressCommand}" />

                <!-- Löschen: entfernt die ausgewählte Adresse -->
                <Button Content="Löschen"
                        Command="{Binding DeleteAddressCommand}" />
            </StackPanel>
        </StackPanel>

        <!-- Liste der Adressen zur aktuellen Person -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding Addresses}"
                 SelectedItem="{Binding SelectedAddress, Mode=TwoWay}"
                 Margin="0,0,0,8">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                Margin="4">
                        <!-- Straße -->
                        <TextBlock Text="{Binding Street}"
                                   Width="220" />
                        <TextBlock Text=" | "
                                   Margin="4,0" />

                        <!-- PLZ + Ort -->
                        <TextBlock>
                            <Run Text="{Binding PostalCode}" />
                            <Run Text=" " />
                            <Run Text="{Binding City}" />
                        </TextBlock>
                        <TextBlock Text=" | "
                                   Margin="4,0" />

                        <!-- Land (optional) -->
                        <TextBlock Text="{Binding Country}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Statuszeile für Adressmeldungen -->
        <StatusBar Grid.Row="3">
            <!-- Bindet an StatusMessage aus AddressViewModel -->
            <StatusBarItem Content="{Binding StatusMessage}" />
        </StatusBar>
    </Grid>
</Window>