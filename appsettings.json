{
  // Zentrale Konfiguration für die WPF-Anwendung mit EF Core + MSSQL LocalDB.
  // Vorteil: ConnectionString und weitere Settings liegen außerhalb des Codes
  // und können ohne Rebuild angepasst werden.

  "ConnectionStrings": {
    // Standard-ConnectionString für EF Core.
    // LocalDB ist für Entwicklungsumgebungen ideal: leichtgewichtig, automatisch startend
    // und ohne separate Serverinstallation nutzbar.
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=WpfCrudDb;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },

  "Logging": {
    // Logging-Konfiguration für die Anwendung.
    // Über die LogLevel-Einträge steuerst du, wie „gesprächig“ das Logging ist.
    "LogLevel": {
      // Standard-Loglevel für die Anwendung.
      // Information: sinnvoll für Entwicklung und einfache Fehlersuche.
      "Default": "Information",

      // EF-Core-spezifische Logs.
      // Warning reduziert die Menge an SQL/Tracking-Details
      // und zeigt vor allem potenziell problematische Stellen an.
      "Microsoft.EntityFrameworkCore": "Warning",

      // Host-Lifetime-Events (Starten/Beenden der Anwendung).
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AppSettings": {
    // Eigene, anwendungsbezogene Einstellungen.
    // Können im Code über IConfiguration["AppSettings:..."] gelesen werden.

    // Markiert, ob die Anwendung im Development-Kontext läuft.
    // Du kannst diesen Schalter z.B. nutzen, um Debug-Features zu aktivieren.
    "IsDevelopment": true,

    // Anzeigename der Anwendung, z.B. für Titelzeile oder About-Dialog.
    "AppName": "WpfEfCoreCRUDTutorial",

    // Einfache Versionsangabe für Anzeigezwecke.
    "AppVersion": "1.0.0"
  }
}

// ALTERNATIVE für SQL Express (statt LocalDB), falls ein vollwertiger SQL Server Express installiert ist:
// "DefaultConnection": "Server=.\\SQLEXPRESS;Database=WpfCrudDb;Trusted_Connection=true"
